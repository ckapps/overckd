{
  "name": "@overckd/desktop-shell",
  "private": true,
  "productName": "overcooked",
  "version": "1.0.0",
  "description": "App for managing recipes",
  "main": "dist/index.js",
  "scripts": {
    "cmd:build": "tsc --project tsconfig.build.json",
    "cmd:start": "electron-forge start",
    "build:desktop": "yarn cmd:build",
    "build:watch": "yarn cmd:build -- --watch",
    "build": "yarn build:desktop",
    "clean": "rimraf dist",
    "start:desktop": "yarn build:watch",
    "start": "yarn cmd:start",
    "app:desktop:dev": "electron-forge start -- --dev --from-url --config=../../data/example-1",
    "app:desktop": "yarn cmd:start",
    "app:desktop:debug": "electron-forge start --inspect-electron -- --dev --from-url --config=../../data/example-1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "test": "jest ."
  },
  "keywords": [],
  "author": {
    "name": "christophka",
    "email": "chris@ckapp.net"
  },
  "license": "MIT",
  "config": {
    "forge": "./forge.config.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/express": "^4.17.8",
    "electron": "12.0.5",
    "png-to-ico": "^2.1.1",
    "png2icns": "0.0.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.9.5"
  },
